Import('module')
Import('custom_tests')

def merge(*args):
    r = []
    for a in args: r += a
    return r

conf = Configure(module, custom_tests)
check = True
	
check = check and conf.CheckLibWithHeader('m', 'math.h', 'C')
	
if module['PLATFORM'] != 'win32':
	check = check and conf.CheckLibWithHeader('GLEW', 'GL/glew.h', 'C')
else:
	check = check and conf.CheckPKGConfig('glew')
	check = check and conf.CheckLib('opengl32')		

module = conf.Finish()

if check:
	if module['PLATFORM'] == 'win32':
		module.ParseConfig('pkg-config --libs --cflags glew')

	module.SharedLibrary('../kalisko_heightmap', merge(Glob('*.c'), Glob('*.cpp')))
	module.Command("heightmap.glslv", File("heightmap.glslv").srcnode(), Copy("$TARGET", "$SOURCE"))
	module.Command("heightmap.glslf", File("heightmap.glslf").srcnode(), Copy("$TARGET", "$SOURCE"))
else:
	print('A required library for the \'heightmap\' module is not available, skipping build...')
